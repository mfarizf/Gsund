<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/putih"
    tools:context=".ui.main.MainActivity">

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/putih"
            android:paddingBottom="20dp"
            tools:context=".ui.home.homeFragment">

            <TextView
                android:id="@+id/sapaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_25ssp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/notosans_regular"
                android:text="Hai Kamu"/>

            <TextView
                android:id="@+id/tv_rekomendasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:text="Ini Rekomendasi Untuk Kamu"
                android:fontFamily="@font/notosans_regular"
                android:layout_below="@+id/sapaan"
                android:layout_marginStart="@dimen/_10sdp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_profile"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/img_random_face"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_10sdp"/>

            <com.yarolegovich.discretescrollview.DiscreteScrollView
                android:id="@+id/option"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_below="@id/tv_rekomendasi"
                app:dsv_orientation="horizontal"
                tools:listitem="@layout/item_option_home" />

            <androidx.cardview.widget.CardView
                android:id="@+id/lihatProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_below="@+id/option"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:id="@+id/bagikan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_radius"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosans_regular"
                        android:text="Lihat Progress Kamu disini"
                        android:textColor="#fff"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/temporary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_below="@+id/lihatProgress"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:id="@+id/temp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_radius"
                    android:backgroundTint="@color/biru_langit"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosans_regular"
                        android:text="Ingatkan Saya Untuk Minum"
                        android:textColor="#fff"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/tv_menu_lainnya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/temporary"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/product_sans"
                android:text="Pilihan Menu Lainnya"
                android:textSize="20sp" />



            <LinearLayout
                android:id="@+id/pilihan_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/tv_menu_lainnya">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="112dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/item_food"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/merah_general">
                        <ImageView
                            android:id="@+id/img_soup"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:src="@drawable/img_ic_food"/>
                        <TextView
                            android:text="Food"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/product_sans"
                            android:textColor="#FFF"
                            android:layout_below="@id/img_soup"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="112dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="10dp"
                    android:background="@color/colorPrimary"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#93E789">
                        <ImageView
                            android:id="@+id/img_run"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:src="@drawable/img_i_sport"/>
                        <TextView
                            android:text="Sport"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/product_sans"
                            android:textColor="#FFF"
                            android:layout_below="@id/img_run"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="112dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorAccent">
                        <ImageView
                            android:id="@+id/img_brokoli"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:src="@drawable/img_ic_diet"/>
                        <TextView
                            android:text="Diet"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/product_sans"
                            android:textColor="#FFF"
                            android:layout_below="@id/img_brokoli"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pilihan_menu"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/product_sans"
                android:text="Tips"
                android:textSize="20sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_tips"
                />


        </RelativeLayout>

    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>