<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_backdrop"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:tint="#8000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/gunung"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_profile"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="88dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true"
        app:cardUseCompatPadding="true"
        android:elevation="10dp"
        app:cardCornerRadius="20dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/picture_profile"
            android:layout_width="70dp"
            android:layout_height="70dp"
           android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="30dp"
            android:src="@drawable/pic_sample_1" />

        <TextView
            android:id="@+id/email_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_profile"
            android:layout_gravity="center_horizontal|top"
            android:layout_toEndOf="@id/picture_profile"
            android:text="@string/sample_email" />

        <TextView
            android:id="@+id/name_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_toEndOf="@id/picture_profile"
            android:fontFamily="@font/notosans_bold"
            android:layout_marginTop="40dp"
            android:text="@string/sample_name"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="145dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|start"
            android:background="@drawable/button_rounded_red"
            android:text="@string/txt_button_profile"
            android:textAllCaps="false"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            />
        <Button
            android:layout_width="145dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|end"
            android:background="@drawable/button_rounded_red"
            android:text="@string/txt_button_progress"
            android:textAllCaps="false"
            android:layout_alignParentBottom="true"
            />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_kurus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:padding="4dp"
        android:background="@drawable/button_blue"
        android:fontFamily="@font/notosans_bold"
        android:text="@string/nilai_kekurangan_berat"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_ideal"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/cv_profile"
        app:layout_constraintTop_toBottomOf="@+id/cv_profile" />

    <TextView
        android:id="@+id/tv_ideal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/notosans_bold"
        android:text="@string/nilai_ideal"
        android:textSize="16sp"
        android:padding="4dp"
        android:background="@drawable/button_green"
        app:layout_constraintEnd_toStartOf="@+id/tv_gemuk"
        app:layout_constraintTop_toBottomOf="@+id/cv_profile" />

    <TextView
        android:id="@+id/tv_gemuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/notosans_bold"
        android:text="@string/nilai_gemuk"
        android:padding="4dp"
        android:background="@drawable/button_yellow"
        android:textSize="16sp"

        app:layout_constraintEnd_toStartOf="@+id/tv_obesitas"
        app:layout_constraintTop_toBottomOf="@+id/cv_profile" />

    <TextView
        android:id="@+id/tv_obesitas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/button_orange"
        android:fontFamily="@font/notosans_bold"
        android:padding="4dp"
        android:text="@string/nilai_obesitas"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/cv_profile"
        app:layout_constraintTop_toBottomOf="@+id/cv_profile" />


    <com.anychart.AnyChartView
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/aktivitas"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/aktivitas"
        android:elevation="12dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/tv_ideal"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="40dp"
        android:layout_height="120dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/gambar_aktivitas"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="30dp"
                android:src="@drawable/pic_run"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="45dp"
                android:layout_toEndOf="@id/gambar_aktivitas"
                android:text="Lari 2KM"
                android:textSize="18sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>