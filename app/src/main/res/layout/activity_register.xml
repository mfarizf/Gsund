<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.registrasi.RegisterActivity"
    android:background="#FFF">

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="36dp"
        android:fontFamily="@font/NotoSans-Bold"
        android:gravity="center"
        android:text="@string/selamat_datang"
        android:textColor="#111"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/motto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/NotoSans-Regular"
        android:text="@string/motto"
        android:layout_marginTop="6dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/judul"
        app:layout_constraintTop_toBottomOf="@id/judul" />

    <ImageView
        android:id="@+id/gambar_halaman_utama"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/undraw_people_search_wctu"
        app:layout_constraintTop_toBottomOf="@id/motto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <EditText
        android:id="@+id/register_input_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Masukan Nama"
        android:ems="12"
        android:padding="3dp"
        android:background="@drawable/outline_register_edit_text"
        app:layout_constraintTop_toBottomOf="@id/gambar_halaman_utama"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:hint="@string/tinggi_badan"
        android:ems="5"
        android:id="@+id/register_input_tb"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="2dp"
        android:background="@drawable/outline_register_edit_text"
        app:layout_constraintStart_toStartOf="@+id/register_input_nama"
        app:layout_constraintTop_toBottomOf="@id/register_input_nama" />

    <EditText
        android:id="@+id/register_input_bb"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/outline_register_edit_text"
        android:ems="5"
        android:hint="@string/berat_bedan"
        android:padding="2dp"
        app:layout_constraintEnd_toEndOf="@+id/register_input_nama"
        app:layout_constraintTop_toBottomOf="@id/register_input_nama" />

    <EditText
        android:id="@+id/register_input_riwayat_penyakit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/outline_register_edit_text"
        android:hint="@string/riwayat_penyakit"
        android:layout_marginTop="12dp"
        android:padding="3dp"
        android:ems="12"
        app:layout_constraintEnd_toEndOf="@+id/register_input_bb"
        app:layout_constraintStart_toStartOf="@+id/register_input_tb"
        app:layout_constraintTop_toBottomOf="@id/register_input_bb" />

    <TextView
        android:letterSpacing=""
        android:id="@+id/txt_jenis_kelamin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/register_input_riwayat_penyakit"
        app:layout_constraintStart_toStartOf="@id/register_input_riwayat_penyakit"
        android:layout_marginTop="15dp"
        android:text="Jenis Kelamin"
        android:textSize="25dp"
        android:fontFamily="@font/NotoSans-Bold"
        />

    <CheckBox
        android:id="@+id/register_cb_pria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_jenis_kelamin"
        android:text="@string/pria"
        android:textColor="@color/merah_general"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/txt_jenis_kelamin"
        />

    <CheckBox
        android:id="@+id/register_cb_wanita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/wanita"
        android:textColor="@color/merah_general"
        app:layout_constraintEnd_toEndOf="@id/txt_jenis_kelamin"
        app:layout_constraintTop_toBottomOf="@id/txt_jenis_kelamin" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/register_cb_pria"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/button_rounded_red"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:text="Register"
        android:textColor="@color/putih"
        android:fontFamily="@font/NotoSans-Regular"
        />



</androidx.constraintlayout.widget.ConstraintLayout>