<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.intro.fragment.intro3">


    <ImageView
        android:layout_marginTop="90dp"

        android:id="@+id/intro_model_3"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:src="@drawable/undraw_healthy_lifestyle_6tyl"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/intro_title_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all_in_one"
        android:fontFamily="@font/notosans_bold"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/intro_model_3"
        app:layout_constraintHorizontal_bias="0.143"
        app:layout_constraintStart_toStartOf="@+id/intro_model_3"
        app:layout_constraintTop_toBottomOf="@id/intro_model_3"
        />

    <TextView
        android:id="@+id/intro_desc_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="70dp"
        android:maxLines="3"
        android:textSize="18sp"
        android:text="@string/deskripsi_intro_3"
        app:layout_constraintEnd_toEndOf="@+id/intro_model_3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/intro_title_3"
        app:layout_constraintTop_toBottomOf="@id/intro_title_3" />


</androidx.constraintlayout.widget.ConstraintLayout>